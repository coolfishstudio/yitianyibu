@import "../variable"
.app-wrapper
  position: relative
  min-height: 100%
  font-size: 0.14rem
  height: 100%
  .app-wrapper-menus
    width: 1.3rem
    height: 100%
    border-right: 1px solid $color-border
    position: fixed
    z-index: 110
    background-color: #fff
    left: 0
    top: 0
    bottom: 0
    .sidebar-close
      position: absolute
      top: 0
      font-size: 0
      padding: 0.105rem
      width: 0.23rem
      height: 0.23rem
      right: 0
      display: none
    .logo-wrapper
      position: absolute
      top: 0
      left: 0
      height: 0.64rem
      width: 0.64rem
      padding: 0.33rem
      text-align: center
      font-weight: 700
      font-size: 0
      img
        width: 100%
        height: 100%
        border-radius: 0.05rem
    .logo-title
      height: 0.5rem
      line-height: 0.5rem
      text-align: center
      position: absolute
      bottom: 0
      width: 100%
      color: #a1b2b4
      font-weight: 700
      font-size: 0.14rem
  .app-wrapper-main
    margin-left: 1.3rem
    height: 100%
    min-height: 100%
    .content-wrapper
      margin: 0 auto
      width: 80%
      max-width: 14.4rem
      min-width: 9rem
      min-height: 100%
      margin-bottom: 1rem
      &.login
        height: 100%
        margin-bottom: -0.51rem
        width: 100%
        max-width: 100%
      &.home
        width: 100%
        max-width: 100%
      .content-wrapper-title
        margin-right: 1.5%
        margin-left: 1.5%
        letter-spacing: 2px
        font-size: 0.55rem
        padding-top: 1rem
        color: $color-text-title
      .content-wrapper-desc
        margin: 1.5%
        padding-top: 0.1rem
        font-size: 0.15rem
        color: $color-text-body
      .content-wrapper-line
        width: 80%
        height: 1px
        background-color: rgba(0,0,0,0.5)
        margin-right: 1.5%
@media (max-width: 992px)
  .app-wrapper
    .app-wrapper-menus
      left: inherit
      right: -1.5rem
      width: 1.5rem
      transition: 0.5s
      background-color: #000
      transform: translate(0)
      border-right: 0
      &.side-bar
        transform: translate(-100%)
      .sidebar-close
        display: block
      .logo-wrapper
        display: none
      .logo-title
        display: none
      .menus-wrapper
        border-bottom: 0
        bottom: 0
        nav
          a
            color: rgba(255, 255, 255, 0.4)
            &.on
              color: #fff
    .app-wrapper-mask
      position: fixed
      top: 0
      bottom: 0
      left: 0
      right: 0
      z-index: 105
      background-color: rgba(0, 0, 0, 0.3)
      transition: 0.4s
      display: none
      &.side-bar
        display: block
    .app-wrapper-main
      margin-left: 0
      .content-wrapper
        min-width: 100%
        max-width: 100%
        margin-bottom: 0
        .content-wrapper-title
          padding-top: 0.7rem
        .content-wrapper-desc
          padding-left: 10%
          line-height: 1.5
        .content-wrapper-title
        .content-wrapper-desc
        .content-wrapper-line
          margin-left: 5%
          margin-right: 5%
